{% extends 'WarrantyLifeApiExampleBundle::layout.html.twig' %}

{% block queries %}
<form id="byId" method="POST" target="results">
<input type="hidden" id="byId_username" name="username" />
<input type="hidden" id="byId_password" name="password" />
<input type="hidden" name="action" value="get" />
{{ endpoint }}/warranties/<input type="text" id="warrantyId" name="warrantyId" placeholder="warrantyId"/>
<br />
<input type="submit" />
</form>

<form id="byRefId" method="POST" target="results">
<input type="hidden" id="byRefId_username" name="username" />
<input type="hidden" id="byRefId_password" name="password" />
<input type="hidden" name="action" value="get" />
{{ endpoint }}/warranties?rerfId=<input type="text" id="refId" name="refId" placeholder="refId"/>
<br />
<input type="submit" />
</form>

<form id="byOrderRefId" method="POST" target="results">
<input type="hidden" id="byOrderRefId_username" name="username" />
<input type="hidden" id="byOrderRefId_password" name="password" />
<input type="hidden" name="action" value="get" />
{{ endpoint }}/warranties?orderRefId=<input type="text" id="orderRefId" name="orderRefId" placeholder="orderRefId"/>
<br />
<input type="submit" />
</form>

<form id="byItemId" method="POST" target="results">
<input type="hidden" id="byItemId_username" name="username" />
<input type="hidden" id="byItemId_password" name="password" />
<input type="hidden" name="action" value="get" />
{{ endpoint }}/items/<input type="text" id="itemId" name="itemId" placeholder="itemId"/>/warranties
<br />
<input type="submit" />
</form>


<form id="add" method="POST" target="results">
<input type="hidden" id="add_username" name="username" />
<input type="hidden" id="add_password" name="password" />
<input type="hidden" name="action" value="post" />
POST {{ endpoint }}/warranties <br />
<textarea name="json" placeholder="{ warranty data here }"></textarea>
<br />
<input type="submit" />
</form>

<form id="add2" method="POST" target="results">
<input type="hidden" id="add2_username" name="username" />
<input type="hidden" id="add2_password" name="password" />
<input type="hidden" name="action" value="post" />
POST {{ endpoint }}/items/<input type="text" id="itemId" name="itemId" placeholder="itemId"/>/warranties <br />
<textarea name="json" placeholder="{ warranty data here }"></textarea>
<br />
<input type="submit" />
</form>


<form id="update" method="POST" target="results">
<input type="hidden" id="update_username" name="username" />
<input type="hidden" id="update_password" name="password" />
<input type="hidden" name="action" value="put" />
PUT {{ endpoint }}/warranties/<input type="text" id="warrantyId" name="warrantyId" placeholder="warrantyId"/> <br />
<textarea name="json" placeholder="{ warranty data here }"></textarea>
<br />
<input type="submit" />
</form>

<form id="delete" method="POST" target="results">
<input type="hidden" id="delete_username" name="username" />
<input type="hidden" id="delete_password" name="password" />
<input type="hidden" name="action" value="delete" />
DELETE {{ endpoint }}/warranties/<input type="text" id="warrantyId" name="warrantyId" placeholder="warrantyId"/>
<br />
<input type="submit" />
</form>
{% endblock %}

{% block endjavascripts %}
<script>
$(function(){
	$('form').submit(function(){
		var id = $(this).attr('id');
		$('#'+id+'_username').val($('#username').val());
		$('#'+id+'_password').val($('#password').val());
	});
});
</script>
{% endblock %}